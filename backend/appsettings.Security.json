{
    "Security": {
        "JWT": {
            "Secret": "your-super-secret-jwt-key-that-should-be-at-least-256-bits-long-for-security",
            "Issuer": "BingGoWebAPI",
            "Audience": "BingGoWebApp",
            "ExpirationMinutes": 1440,
            "RefreshTokenExpirationDays": 7
        },
        "RateLimit": {
            "DefaultRequestsPerMinute": 100,
            "AuthenticationRequestsPerMinute": 5,
            "FileUploadRequestsPerMinute": 10,
            "AdminRequestsPerMinute": 50
        },
        "InputValidation": {
            "MaxRequestBodySizeMB": 50,
            "MaxFileSizeMB": 10,
            "MaxFileCount": 10,
            "AllowedFileExtensions": [
                ".jpg",
                ".jpeg",
                ".png",
                ".gif",
                ".bmp",
                ".webp",
                ".pdf",
                ".doc",
                ".docx",
                ".txt",
                ".rtf",
                ".mp3",
                ".wav",
                ".ogg",
                ".m4a",
                ".mp4",
                ".avi",
                ".mov",
                ".wmv",
                ".webm"
            ],
            "AllowedContentTypes": [
                "image/",
                "audio/",
                "video/",
                "application/pdf",
                "application/msword",
                "application/vnd.openxmlformats-officedocument",
                "text/plain",
                "text/rtf"
            ]
        },
        "Headers": {
            "EnableHSTS": true,
            "HSTSMaxAgeSeconds": 31536000,
            "EnableContentTypeOptions": true,
            "EnableFrameOptions": true,
            "FrameOptions": "DENY",
            "EnableXSSProtection": true,
            "EnableReferrerPolicy": true,
            "ReferrerPolicy": "strict-origin-when-cross-origin",
            "EnableCSP": true,
            "EnablePermissionsPolicy": true,
            "PermissionsPolicy": "camera=(), microphone=(), geolocation=(), payment=()"
        },
        "AbuseDetection": {
            "MaxRequestsPerMinute": 200,
            "MaxSensitiveEndpointAccess": 10,
            "MaxFailedAuthAttempts": 5,
            "BlockDurationMinutes": 15
        }
    },
    "AllowedOrigins": [
        "http://localhost:3000",
        "https://localhost:3000",
        "https://binggo-english.com",
        "https://www.binggo-english.com"
    ],
    "Firebase": {
        "ProjectId": "kltn-c5cf0",
        "AllowedIssuers": [
            "https://securetoken.google.com/kltn-c5cf0",
            "firebase-adminsdk"
        ]
    }
}