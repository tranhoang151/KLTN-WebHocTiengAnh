{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-backend",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/backend/BingGoWebAPI.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch-backend",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "${workspaceFolder}/backend/BingGoWebAPI.csproj"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "start-frontend",
      "command": "npm",
      "type": "shell",
      "args": ["start"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "docker-up",
      "command": "docker-compose",
      "type": "shell",
      "args": ["up", "-d"],
      "group": "build",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "docker-down",
      "command": "docker-compose",
      "type": "shell",
      "args": ["down"],
      "group": "build",
      "presentation": {
        "reveal": "always"
      }
    }
  ]
}